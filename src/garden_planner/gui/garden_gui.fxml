<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="garden_planner.gui.Controller">
   <center>
      <Pane id="gardenPane" fx:id="inner" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <Label alignment="CENTER" text="Welcome to the Garden Planner" BorderPane.alignment="CENTER">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <Label fx:id="messageLabel" text="Label" BorderPane.alignment="CENTER" />
   </bottom>
   <left>
      <Button fx:id="button1" mnemonicParsing="false" onAction="#button1Handler" text="Button" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <VBox fx:id="col" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <TextField fx:id="wallLength" />
                  <TextField fx:id="wallCost" />
               </children></HBox>
            <HBox>
               <children>
                  <TextField fx:id="area" />
                  <TextField fx:id="areaCost" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="totalCost" minWidth="-Infinity" />
               </children>
            </HBox>
         </children></VBox>
   </right>
</BorderPane>
